{
  "name": "emoji-toolbox",
  "description": "A emoji toolbox that can help you to create a amazing UIs based on emoji styles.",
  "version": "1.0.1",
  "license": "Apache-2.0",
  "author": "Michael Araque",
  "repository": {
    "type": "git",
    "url": "https://github.com/michyaraque/emoji-toolbox.git"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "mocha --require ts-node/register tests/**/*.test.ts",
    "dev": "nodemon --watch 'src/**/*.ts' --exec ts-node src/index.ts",
    "build": "rimraf dist && npm run build:esm && npm run build:cjs && npm run copyfiles",
    "copyfiles": "copyfiles -u 1 \"src/dist/**/*.d.ts\" dist/cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module CommonJS --outDir dist/cjs",
    "start": "node dist/index.js"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/color": "^3.0.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/typescript": "^2.0.0",
    "chai": "^4.3.7",
    "copyfiles": "^2.4.1",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "color": "^4.2.3"
  },
  "peerDependencies": {
    "color": "^4.2.3",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
